    <main>

        <h1 class="titulo"><b>Relaçao entre Itens Indicadores</b></h1>
        <div class="container">



        </div>

        <section class="container">
            <div class="esquerda">
                <select class="input-group dropdown">
                    <option value="1">Opção 1</option>
                    <option value="2">Opção 2</option>
                    <option value="3">Opção 3</option>
                    <option value="4">Opção 4</option>
                </select>
                <table class="table tabela table-bordered">
                    <thead>
                        <tr>
                            <th class="center" scope="col"><b>Itens Indicadores</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Item 1</td>
                        </tr>
                        <tr>
                            <td>Item 2</td>
                        </tr>
                        <tr>
                            <td>Item 3</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="esquerda">

                <select class="input-group dropdown">
                    <option value="1">Opção 1</option>
                    <option value="2">Opção 2</option>
                    <option value="3">Opção 3</option>
                    <option value="4">Opção 4</option>
                </select>

                <table class="table tabela table-bordered">
                    <thead>
                        <tr>
                            <th class="center" scope="col"><b>Itens Indicadores</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Item 1</td>
                        </tr>
                        <tr>
